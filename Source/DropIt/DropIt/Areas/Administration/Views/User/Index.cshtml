@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administration/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table-wrapper venues-table section">
    <div class="row-fluid head">
        <div class="span12">
            <h4>Quản Lý Người Dùng</h4>
        </div>
    </div>
    <div class="row-fluid filter-block">
        <div class="pull-right">
            
        </div>
    </div>
    <div id="pad-wrapper">
        <div class="row-fluid">
            <div id="UserTable" style="width: 100%; margin: auto;"></div>
        </div>
    </div>
    <!-- end events table -->
</div>
<script> 
    $(document).ready(function () {
        
        var jtable_config = {
            title: 'Danh sách người dùng',
            paging: true,
            pageSize: 5,
            sorting: true,
            /*selecting: true,
            multiselect: true,
            selectingCheckboxes:true,*/
            actions: {
                base: {}
            },            
            fields: {
                UserId: {
                    key: true,
                    create: false,
                    edit: false,
                    list: false
                },
                UserName: {                    
                    list: true,
                    edit: false,
                    //type: 'hidden',
                    title: 'Tên người dùng',
                    validation: [
                        "required"
                    ]
                    //input: function (data) {
                    //    return '<input type="text" name="Name" style="width:200px" value="' + data.record.UserName + '" />';
                    //}
                },                
                Email: {
                    list: false,
                    title: 'Email',
                    validation: ["required"]
                },
                Phone: {
                    title: "Điện Thoại"
                },
                Address: {
                    list: true,
                    title: "Địa chỉ",
                    validation: ["required"]                    
                },
                Active: {                    
                    title: "Trạng thái tài khoản",
                    type: "checkbox",
                    values: { "false": "Passive", "true": "Active" },
                    defaultValues: "true"
                },
                Sellable: {
                    title: "Trạng thái bán",
                    type: "checkbox",
                    values: { "false": "Passive", "true": "Active" },
                    defaultValues: "true"
                },
                ProvinceId: {
                    title: "Tỉnh/Thành",
                    validation: ["required"],
                    options: Url({ Controller: "Province", Action: "GetProvinceOptions" })
                }                
            }            
        }

        $('#UserTable').jtable(dropit.jtInit(jtable_config));
        $('#UserTable').jtable('load');        
    });
</script>

@model IEnumerable<DropIt.Models.Ticket>
@{
    ViewBag.Title = "ListTicket";
    Layout = "~/Areas/Administration/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table-wrapper events-table section">
    <div class="row-fluid head">
        <div class="span9">
            <h4>Quản lý vé</h4>
        </div>
    </div>    
    
    <!-- 
        đang test
        -->
    
    <div class="span12">
        @using (Html.BeginForm()){     
            <p>
            
            <ul class="nav nav-tabs">
            @{                
                var statuses = Enum.GetValues(typeof(DropIt.Common.Statuses.Ticket)).Cast<Int32>().ToList();
                foreach (int statusValue in statuses)
                {
                    var classes = "";
                    if ((int)ViewBag.CurrentStatus == statusValue)
                    {
                        classes = "active";
                    }
                        
                    <li class="@classes">
                        <a href="@Url.Action("List", new { status = statusValue })">
                            @DropIt.Common.Statuses.getText("TicketStrings",statusValue)
                        </a>
                    </li>
                }
            }
            </ul>
            </p> 
        } 

        @if(Model.Count()==0){
        <center>
            <p>Không có giao dịch nào @DropIt.Common.Statuses.getText("TicketStrings",(int)ViewBag.CurrentStatus)</p>
        </center>
        }else{
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        <span class="line"></span>Sự kiện
                    </th>
                    <th>
                        <span class="line"></span>Thời gian tổ chức
                    </th>
                    <th>
                        <span class="line"></span>Miêu tả ghế
                    </th>
                    <th>
                        <span class="line"></span>Ghi chú
                    </th>
                    <th>
                        <span class="line"></span>Người bán
                    </th>
                    <th>
@*                        <span class="line"></span>Tình trạng
                    </th>*@
                </tr>
            </thead>
            <tbody>
                <!-- row -->
                @foreach (var item in Model)
                {
                    <tr class="first">
                        <td>
                            @Html.DisplayFor(modelItem => item.Event.EventName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Event.HoldDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.UserName)
                        </td>
                        @*    <td>
                           @Html.DisplayFor(modelItem => item.TranStatus)
                        </td>*@
                        @{
                                var statuses = Enum.GetValues(typeof(DropIt.Common.Statuses.Ticket)).Cast<Int32>().ToList();
                                if (ViewBag.CurrentStatus == 0)
                                {
                                    <td>
                                        @Html.ActionLink("Cho phép", "ChangeStatus", new { id = item.TicketId }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.TicketId }) |
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.TicketId }) |
                                        @Html.ActionLink("Xóa", "Delete", "Ticket", new { id = item.TicketId }, new { onclick = "return confirm('Bạn có chắc chắn muốn xóa vé này?');" })
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.ActionLink("Không cho phép", "ChangeStatus", new { id = item.TicketId }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.TicketId }) |
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.TicketId })
                                    </td>
  
                                }
                            
                        }
                        @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.TicketId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.TicketId }) |
                                @Html.ActionLink("Delete", "Delete", "Ticket", new { id = item.TicketId }, new { onclick = "return confirm('Bạn có chắc chắn muốn xóa vé này?');" })
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
        }
    </div>
    
    <!-- 
        đang test
        -->
</div>


                @Html.HiddenFor(model => model.TicketId)

                <div class="">
                    @Html.Label("Tên sự kiện:")
                </div>
                <div class="">
                    @Html.DropDownList("EventId", (SelectList)ViewBag.EventId)
                    @Html.ValidationMessageFor(model => model.EventId)
                </div>
                
                @*@Html.LabelAndControl("Tên sự kiện:", Html.DropDownList("EventId"))
                
                @Html.LabelAndControl("Ghê ngồi:", Html.TextBox("Seat"))
                
                @Html.LabelAndControl("Ghi chú (tùy chọn):", Html.TextBox("Description"))
                
                @Html.LabelAndControl("Giá bán:", Html.TextBox("SellPrice"))
                
                @Html.LabelAndControl("Tiền nhận được:", Html.TextBox("ReceiveMoney"))*@
                <div class="editor-label">
                    @Html.Label("Ghê ngồi:")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Seat)
                    @Html.ValidationMessageFor(model => model.Seat)
                </div>

                <div class="editor-label">
                    @Html.Label("Ghi chú (tùy chọn):")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>

                <div class="editor-label">
                    @Html.Label("Giá bán:")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.SellPrice)
                    @Html.ValidationMessageFor(model => model.SellPrice)
                </div>

                <div class="editor-label">
                    @Html.Label("Tiền nhận được:")
                </div>
                <div class="editor-field">

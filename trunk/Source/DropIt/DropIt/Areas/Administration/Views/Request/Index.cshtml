<script> 
    $(document).ready(function () {
        
        var jtable_config = {
            title: 'Danh sách người dùng',
            paging: true,
            pageSize: 5,
            sorting: true,
            /*selecting: true,
            multiselect: true,
            selectingCheckboxes:true,*/
            actions: {
                base: {}
            },            
            fields: {
                UserId: {
                    title: 'Tên người dùng',
                    key: true,
                    edit: false,
                    list: true,
                    options: Url({ Controller: "User", Action: "GetUserOptions" })
                },
                EventId: {                    
                    list: true,
                    edit: true,
                    //type: 'hidden',
                    title: 'Tên sự kiện',
                    validation: [
                        "required"
                    ],
                    options: Url({ Controller: "Event", Action: "GetEventOption" })
                    //input: function (data) {
                    //    return '<input type="text" name="Name" style="width:200px" value="' + data.record.UserName + '" />';
                    //}
                },                
                Status: {
                    list: false,
                    title: 'trạng thái',
                    validation: ["required"]
                },
                Description: {
                    title: "miêu tả"
                }
               
            }            
        }

        $('#RequestTable').jtable(dropit.jtInit(jtable_config));
        $('#RequestTable').jtable('load');
    });
</script>

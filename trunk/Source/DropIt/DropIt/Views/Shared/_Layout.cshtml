<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ko")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/utils")
    @Scripts.Render("~/bundles/DropIt")


    @Styles.Render("~/Content/DropIt")
    <script>
        var Routing = {
            Area: "@ViewContext.RouteData.DataTokens["area"]",
            Controller: "@ViewContext.RouteData.Values["controller"]",
            Action: "@ViewContext.RouteData.Values["action"]"
        }
    </script>
</head>
<body>
    <div id="page">
        <header class="upper-header">
            <div class="container">
                @Html.Partial("Partials/LogoAndTagLine")

                <div id="user">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </div>

        </header>

        @Html.Partial("Partials/MenuBar")


        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <!--Area: Footer-->
            <div id="footer" class="container">
                <hr>
                <div class="logo-footer">
                    <img src="/images/footerlogo.png">
                </div>
                <div>
                    <p>Copyright 2013. All right reserved</p>
                </div>
                <div class="navbar span7 pull-right">
                    <ul class="nav">
                        <li><a href="#">TRANG CHỦ</a></li>
                        <li>
                            <a href="#">SỰ KIỆN </a>
                        </li>
                        <li><a href="#">DÀNH CHO NGƯỜI MỚI</a></li>
                        <li><a href="#">VỀ CHÚNG TÔI</a></li>
                    </ul>
                </div>
            </div>
            <!--Area: Footer.END-->
        </footer>

    </div>
    @RenderSection("scripts", required: false)
</body>
</html>

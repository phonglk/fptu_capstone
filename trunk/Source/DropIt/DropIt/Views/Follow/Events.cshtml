@model IEnumerable<DropIt.Models.UserFollowEvent>
@using BootstrapExtensions.Base
@using BootstrapExtensions.Base.Button
@using BootstrapExtensions.Base.Form
@using BootstrapExtensions.Base.Form.Label
@using BootstrapExtensions.Components.Alert
@{
    ViewBag.Title = "Manage Follow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="content">
    <div id="bord">
        &nbsp;
    </div>

    <div class="row">
        <div class="span3">
            <div class="sidebar-nav">
                @if(!User.Identity.IsAuthenticated){
                    @Html.Partial("Partials/SideBar")
                }else{
                    if(Session["Role"]!=null && Session["Role"].Equals("Sell")){
                        @Html.Partial("Partials/SideBar_Sell")
                    }else{
                        @Html.Partial("Partials/SideBar_Buy");
                    }
                }
            </div>
        </div>
        <div class="display-field span9">
            <h2 class="event-name">Những Sự Kiện dang được theo dõi</h2>
            <blockquote>
                Bạn đang theo dõi <span class="badge badge-important">2 show ca nhạc</span> , <span class="badge badge-important">2 tv show</span> và <span class="badge badge-important">1 trận đấu</span>
            </blockquote>
        </div>
        <div class="row span9">

            <div class="ticket-list">
                <table class="table table-condensed event-detail">
                    <thead>
                        <tr class="header warning">
                            <th class="span3">Sự Kiện</th>
                            <th class="">Thời gian</th>
                            <th class="span3">Địa điểm</th>
                            <th class="span2">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- row -->
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="first">
                                    @item.Event.EventName
                                </td>
                                <td class="descript">
                                    @item.Event.HoldDate
                                </td>
                                <td class="price">
                                    @item.Event.Venue.VenueName
                                </td>
                                <td class="action">
                                    <a href="#" class="btn btn-inverse btn-buy btn-small">Đặt vé</a>

                                    @*@using (Html.BeginForm("FollowEvent", "Event", FormMethod.Post,null)) {
                                        @Html.Button("Bỏ theo dõi",new { type = "submit" });
                                     @Html.Hidden("EventId", item.EventId);
                                    }*@
                                    <a href="#" class="btn-follow btn btn-inverse" data-follow="true" data-eventId="@item.EventId">Theo dõi</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script>
        $(function(){
            follow_init();
        })
    </script>